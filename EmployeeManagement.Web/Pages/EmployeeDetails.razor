@page "/employeedetails/{id}"
@page "/employeedetails"
@inherits EmployeeDetailsBase


@if (Employee == null)
{  
    <div class="spinner"></div>
}
else
{

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Employee.FirstName @Employee.LastName @Employee.SurName</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@Employee.PhotoPath" />
                <h4>Employee ID : @Employee.EmployeeId</h4>
                <h4>Biometric ID : @Employee.BiometricId</h4>
                <h4>Email : @Employee.Email</h4>
                <h4>Gender : @Employee.Gender</h4>
                <h4>Date of Birth : @Employee.DateOfBirth</h4>
                <h4>Place of Birth : @Employee.PlaceOfBirth</h4>
                <h4>Marital Status : @Employee.Marital_Status</h4>
                <h4>Status : @Employee.Status</h4>
                <h4>Permanent Address : @Employee.PermanentAddress</h4>
                <h4>Current Address : @Employee.CurrentAddress</h4>

            </div>
            <div class="card card-footer text-center">
                <a hreft="/" class="btn btn-primary">Back</a>
                <a hreft="#" class="btn btn-primary">Edit</a>
                <a hreft="#" class="btn btn-primary">Delete</a>
            </div>
        </div>
    </div>
</div>

}