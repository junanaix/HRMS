<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu" OnClick="@((b) => ButtonClicked())"></MatIconButton>
                    <MatAppBarTitle>HRMS</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatBlazor.MatAppBarSectionAlign.End">
                <NavLink class="text-white nav-link" href="" Match="NavLinkMatch.All">
                    Home
                </NavLink>
                <NavLink class="text-white nav-link" href="" Match="NavLinkMatch.All">
                    Sign In
                </NavLink>
                <NavLink class="text-white nav-link" href="" Match="NavLinkMatch.All">
                    About
                </NavLink>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>
    @*Navigation Drawer*@
    <MatBlazor.MatAppBarContent>
        <MatBlazor.MatAppBarContainer>
            <MatBlazor.MatDrawerContainer>
                <MatBlazor.MatDrawer @bind-Opened="@Opened" Mode="MatBlazor.MatDrawerMode.Modal">
                    @*List*@
                    <MatBlazor.MatListGroup>
                        <MatBlazor.MatListGroupSubHeader>Dashboard</MatBlazor.MatListGroupSubHeader>
                        <MatBlazor.MatList>
                            <MatBlazor.MatListItem>
                                Post
                            </MatBlazor.MatListItem>
                            <MatBlazor.MatListItem>
                                Pages
                            </MatBlazor.MatListItem>
                            <MatBlazor.MatListItem>
                                Media
                            </MatBlazor.MatListItem>
                        </MatBlazor.MatList>
                        <MatBlazor.MatListGroupSubHeader>Master Files</MatBlazor.MatListGroupSubHeader>
                        <MatBlazor.MatList>
                            <MatBlazor.MatListItem Href="/Employees">
                                Employees
                            </MatBlazor.MatListItem>
                            <MatBlazor.MatListItem>
                                Change Password
                            </MatBlazor.MatListItem>
                        </MatBlazor.MatList>
                    </MatBlazor.MatListGroup>
                </MatBlazor.MatDrawer>
            </MatBlazor.MatDrawerContainer>
        </MatBlazor.MatAppBarContainer>
        <MatBlazor.MatDrawerContent Style="width:100vw; height:100vh;">
            <div style="margin:1em; padding:1em;" class="container">
                @Body
            </div>
        </MatBlazor.MatDrawerContent>
    </MatBlazor.MatAppBarContent>
</MatAppBarContainer>
    



@functions
{
    bool Opened = false;

    void ButtonClicked()
    {
        Opened = !Opened;
    }
}
    
